{
  "name": "Bot-Development-Kit",
  "version": "0.0.4",
  "description": "Bot scaffold for refocus bot development",
  "url": "https://git.soma.salesforce.com/tausif-muzaffar/refocus-bdk",
  "scripts": {
    "start": "npm run build-ui && npm run install-bot && node index.js",
    "build-ui": "webpack --config webpack.config.js",
    "start-ui": "webpack-dev-server --open",
    "install-bot": "node lib/install.js",
    "postinstall": "npm run build-ui",
    "test": "./node_modules/.bin/mocha --reporter spec",
    "test-dev": "nodemon --ext js --watch ./ --exec 'mocha ./tests'"
  },
  "dependencies": {
    "express": "4.10.2",
    "jsforce": "^1.7.1",
    "moment": "^2.18.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "socket.io": "1.2.0",
    "socket.io-client": "^2.0.3",
    "superagent": "3.6.0"
  },
  "babel": {
    "presets": [
      "env",
      "react"
    ]
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.24.1",
    "chai": "4.1.2",
    "css-loader": "^0.28.4",
    "html-webpack-plugin": "^2.28.0",
    "sinon": "3.2.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5",
    "zip-webpack-plugin": "2.0.0"
  },
  "metadata": {
    "actions": [
      {
        "name": "actionName",
        "parameters": [
          {
            "name": "parameterName",
            "type": "String"
          }
        ]
      }
    ],
    "data": [
      {
        "name": "dataName",
        "type": "String"
      }
    ],
    "settings": [
      {
        "key": "dataName",
        "helpText": "Describe the information needed in this setting"
      }
    ]
  }
}
